<odoo>
  
    <!-- actions opening views on models -->

    <record id="cyclic_product_tree" model="ir.ui.view">
      <field name="name">cyclic.product.tree</field>
      <field name="model">cyclic.product</field>
      <field name="arch" type="xml">
        <tree string="Lista de Productos" multi_edit="1"   
        decoration-success="status == 'even'"
        decoration-danger="status == 'difference'"
        decoration-warning="status == 'corrected'">
          <!-- <field name="sequence" widget="handle"/> -->
          <field name="product_code" readonly="1" />
          <field name="name" />
          <field name="unit_cost" />
          
          <field name="system_units" string="U. Sistema" />
          <field name="real_units" string="U. Reales" />
          <field name="difference" string="Diferencia" />
          
          <field name="status" string="Estado" />
        </tree>
      </field>
    </record>
    
    <record id="cyclic_product_form" model="ir.ui.view">
      <field name="name">cyclic.product.form</field>
      <field name="model">cyclic.product</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
                <label for="name"/>
              <h1>
                  <field name="name"/>
              </h1>
          </div>
            <group>
              <group>
  
                <field name="product_code"/>
                <field name="sku"/>
                <field name="location_code"/>
                <field name="system_units"/>
              </group>
              <group>
                <field name="unit_cost"/>
                <field name="mu_id" />
                <field name="category_id"/>
                
                <field name="real_units"/>
              </group>
            </group>
            <notebook>
              <page string="Ubicación">
                <group>
                  <group>
                    <field name="warehouse_id" />
                    <field name="whlocation_id"  domain="[('warehouse_id','=',warehouse_id)]"/>
                  </group>
                </group>
              </page>
              <!-- Admins Only -->
              <page string="Administración">
                <group>
                  <group>
                    <field name="ccount_id" />
                    
                  </group>
                </group>
              </page>
             
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="message_ids" options="{'post_refresh': 'recipients'}" />
          </div>
        </form>
  
      </field>
    </record>
  


    <record id="product_action" model="ir.actions.act_window" >
      <field name="name">Productos</field>
      <field name="res_model">cyclic.product</field>
      <field name="view_mode">tree,form</field>
    </record>


   
    
</odoo>
